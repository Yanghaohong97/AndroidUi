<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_glide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="加载网络图片"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载资源图片"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载本地图片"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载网络gif"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载资源gif"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide5"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载本地gif"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide6"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="加载本地小视频和快照"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide7"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="设置缩略图比例,然后，先加载缩略图，再加载原图"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide8"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_glide9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="先建立一个缩略图对象，然后，先加载缩略图，再加载原图"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_glide9"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>